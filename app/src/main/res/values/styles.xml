<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowBackground">@color/colorPrimaryFondo</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="logo">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="usuario" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">#11000000</item>
        <item name="android:drawableLeft">@drawable/ic_action_user</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>

    </style>

    <style name="pass" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">#11000000</item>
        <item name="android:drawableLeft">@drawable/ic_action_pass</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
    </style>

    <style name="et_base" parent="Base.Widget.AppCompat.EditText">
        <item name="android:background">#11000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimaryDark</item>
    </style>

    <style name="boton" parent="Base.Widget.AppCompat.Button">
        <item name="android:elevation">8dp</item>
        <item name="android:textColor">#fff</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/buttonshape</item>
        <item name="android:shadowColor">#A8A8A8</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
    </style>


    <style name="miboton" parent="Base.Widget.AppCompat.Button">
        <item name="android:elevation">8dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/buttonshapematerial</item>
    </style>

    <style name="mibotonPrinc" parent="Base.Widget.AppCompat.Button">
        <item name="android:elevation">8dp</item>
        <item name="android:textColor">#000</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/buttonshapematerialprincipal</item>
    </style>

    <style name="mibotonSecund" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/colorSecondaryDark</item>
        <item name="android:elevation">0dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/buttonshapematerialsecundario</item>
    </style>


    <style name="textGrande" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">16dp</item>
    </style>

</resources>
